<header class="navbar navbar-fixed-top navbar-default">
  <% container_class = request.path_info == root_path ? "container-fluid" : "container-large" %>
  <div class=<%= container_class %>>
    <% if logged_in? %>
      <div class="icon-container">
        <%= link_to notified_notifications_path do %>
          <span class="fa-stack">
            <% if unchecked_notifications.any? %>
              <i class="far fa-bell fa-stack-1x bell-icon"></i>
              <i class="fas fa-circle n-circle fa-stack-1x notification-icon"></i>
            <% else %>
              <i class="far fa-bell fa-stack-1x bell-icon"></i>
            <% end %>
          </span>
          <% end %>
      </div>
    <% end %>
    <button type="button" class="navbar-toggle offcanvas-toggle" data-toggle="offcanvas" data-target="#js-bootstrap-offcanvas">
      <span class="sr-only">Toggle navigation</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <div class="navbar-header">
      <%= link_to image_tag("logo_portcurio.png", alt: "portcurio logo", height: "100%"), root_path, 'data-turbolinks': false, id: "service_logo" %>
      <%= render partial: 'layouts/keyword_search_form', locals: { keywords: @keywords } %>
    </div>
    <nav role="navigation">
      <div class="navbar-offcanvas navbar-offcanvas-touch navbar-offcanvas-right" id="js-bootstrap-offcanvas">
        <ul class="nav navbar-nav navbar-right" id="navbar">
          <li><%= link_to "Home", root_path, 'data-turbolinks': false %></li>
          <% if logged_in? %>
            <li><%= link_to "MyPortcurio", portcurio_user_path(current_user), 'data-turbolinks': false %></li>
            <li><%= link_to "Links", links_path %></li>
            <li><%= link_to "Feed", microposts_path %></li>
            <li><%= link_to "Users", users_path %></li>
            <li><%= link_to "Help", help_path %></li>
          <% end %>
          <% if logged_in? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Account <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Activity", activity_notifications_path %></li>
                <li><%= link_to "Profile", current_user %></li>
                <li><%= link_to "Settings", edit_user_path(current_user), 'data-turbolinks': false %></li>
                <li><%= link_to "Log out", logout_path %></li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "Log in", login_path %></li>
          <% end %>
        </ul>
      </div>
    </nav>
  </div>
</header>