<% provide(:title, @title) %>

<h1><%= @title %></h1>

<div class="tag-search-container">
  <%= render partial: 'microposts/tag_search_form', locals: { micropost: @micropost, selected_tags: @selected_tags, tags: @tags } %>
</div>

<% if @material_filter %>
  <ol class="materials">
    <%= render partial: 'microposts/materials', collection: @all_microposts, as: 'micropost' %>
  </ol>
<% else %>
  <ol class="microposts">
    <%= render @all_microposts %>
  </ol>
<% end %>

<div class='center'><%= paginate @all_microposts %></div>